{
  "name": "bepinex-macos-mod-manager",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun src/index.tsx",
    "dev": "bun --watch src/index.tsx",
    "build:target": "bun build --compile --target=bun-$TARGET --minify --sourcemap src/index.tsx --outfile dist/bpmacmods-$TARGET",
    "build:local": "bun build --compile --minify --sourcemap src/index.tsx --outfile bin/bpmacmods",
    "build": "TARGET=darwin-x64 bun build:target & TARGET=darwin-aarch64 bun build:target && wait",
    "lipo": "lipo -create -output ./dist/bpmacmods-darwin-universal ./dist/bpmacmods-darwin-x64 ./dist/bpmacmods-darwin-aarch64",
    "zip:target": "zip -Dj9 dist/bpmacmods-$TARGET.zip dist/bpmacmods-$TARGET",
    "zip": "TARGET=darwin-universal bun zip:target",
    "dist": "rm -rf ./dist && bun run build && bun lipo && bun zip"
  },
  "engines": {
    "bun": "^1.3.5"
  },
  "os": [
    "darwin"
  ],
  "dependencies": {
    "ink": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "@types/react": "^19.0.0",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.7.0"
  }
}
